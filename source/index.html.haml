#main-region.container
  %p
    Here is static content in the web page. You'll notice that it gets
    replaced by our app as soon as we start it

.modal
  .modal-dialog
    .modal-content
      #dialog-region.modal-body

%script#contact-list{type: 'text/x-handlebars-template'}
  %thead
    %tr
      %th First name
      %th Last name
      %th
  %tbody

%script#contact-list-item{type: 'text/x-handlebars-template'}
  %td {{firstName}}
  %td {{lastName}}
  %td
    %a.btn.btn-xs.btn-primary.js-show{href: '#contacts/{{id}}'}
      %span.glyphicon.glyphicon-eye-open
      Show
    %a.btn.btn-xs.btn-primary.js-edit{href: '#contacts/{{id}}/edit'}
      %span.glyphicon.glyphicon-pencil
      Edit
    %button.btn.btn-xs.btn-danger.js-delete
      %span.glyphicon.glyphicon-remove
      Delete

%script#missing-contact-view{type: 'text/x-handlebars-template'}
  .alert.alert-danger
    This contact doesn't exist!

%script#contact-view{type: 'text/x-handlebars-template'}
  %h1 {{firstName}} {{lastName}}
  %p
    %strong Phone number
    {{phoneNumber}}
  %p
    %a.btn.btn-default{href: '#contacts'}
      %span.glyphicon.glyphicon-chevron-left
      Back
    %a.btn.btn-default{href: '#contacts/{{id}}/edit'}
      %span.glyphicon.glyphicon-pencil
      Edit this contact

%script#loading-view{type: 'text/x-handlebars-template'}
  %h1 Artificial Loading Delay
  %p Data loading is delayed to demonstrate using a loading view
  #spinner

%script#contact-form{type: 'text/x-handlebars-template'}
  %h1 Edit {{firstName}} {{lastName}}
  %form
    .form-group
      %label{for: 'contact-firstName'} First name:
      %input#contact-firstName.form-control{type: 'text', name: 'firstName', value: '{{firstName}}'}
    .form-group
      %label{for: 'contact-lastName'} Last name:
      %input#contact-lastName.form-control{type: 'text', name: 'lastName', value: '{{lastName}}'}
    .form-group
      %label{for: 'contact-phoneNumber'} Phone number:
      %input#contact-phoneNumber.form-control{type: 'text', name: 'phoneNumber', value: '{{phoneNumber}}'}
    %a.btn.btn-default{href: '#contacts/{{id}}'}
      %span.glyphicon.glyphicon-chevron-left
      Back
    %button.btn.btn-primary.js-submit
      %span.glyphicon.glyphicon-ok
      Save
